<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp"
    android:background="#2787A4"
    >
    <TextView
        android:layout_height="match_parent"
        android:layout_width="80dp"
        android:id="@+id/t_event"
        android:layout_alignParentLeft="true"
        android:text="resume critique"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="150dp"
        android:id="@+id/t_department"
        android:layout_toRightOf="@+id/t_event"
        android:text="CEACS"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="70dp"
        android:id="@+id/t_date"
        android:layout_toRightOf="@+id/t_department"
        android:text="12 june"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="70dp"
        android:id="@+id/t_time"
        android:layout_toRightOf="@+id/t_date"
        android:text="12pm"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />



</RelativeLayout>